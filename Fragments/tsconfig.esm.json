{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "rootDir": "./ts-gen",
    "outDir": "./dist/esm",
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "noEmitOnError": true
  },
  "include": [
    "ts-gen/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.d.ts"
  ]
}
